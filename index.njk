---
layout: base-layout.njk
pagination:
  data: collections.essay
  size: 10
  reverse: true
  alias: essays
---

{% set essay = essays[0]%}

{% for essay in collections.essay | reverse %}
    <article>
        <div class="toc-header">
            <h3>
                <em><a href="{{ essay.url | url }}">{{ essay.data.title }}</a></em>
            </h3>

            <time datetime="{{ essay.date | dateIso }}">
                <em>{{ essay.date | dateReadable }}</em>
            </time>
        </div>
        <section>
        {{ essay.templateContent | safe | truncate(300) }}
        &nbsp;
        <a href="{{ essay.url | url }}">continue reading</a>
        </section>
    </article>
{% endfor %}