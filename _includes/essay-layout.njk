---
layout: base-layout.njk
---
<div class="row">
    <div class="col-lg-8 mx-auto mb-5">
        <div class="d-flex flex-column align-items-center my-3">
            <time class="source-code-pro text-muted" datetime="{{ date | dateIso }}">{{ date | dateReadable }}</time>
            <h1 class="harbour-md text-purple text-center">{{ title }}</h1>
        </div>
        {% if verse %}
            <p class="text-muted font-italic">
            {{ verse }}
            {% if citation %}
                <br>
                <span> &mdash; {{ citation }}</span>
            {% endif %}
            </p>
        {% endif %}

        {% if subheading %}
            <p class="font-italic text-muted">{{ subheading }}</p>
        {% endif %}
        
        {{ content | safe }}

        <a class="source-code-pro" href="/">BACK HOME</a>
    </div>
</div>