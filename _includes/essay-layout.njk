---
layout: base-layout.njk
---
<article>
    <h5 class="essay-title">{{ title }}</h5>

    <time datetime="{{ date | dateIso }}">{{ date | dateReadable }}</time>

    {% if verse %}
        <p>
            <em>{{ verse }}</em>
            {% if citation %}
                <br>
                <em><span> &mdash; {{ citation }}</span></em>
            {% endif %}
        </p>
    {% endif %}

    {% if subheading %}
        <p><em>{{ subheading }}</em></p>
    {% endif %}

    {{ content | safe }}
</article>